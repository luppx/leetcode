{
    "tasks": [
        {
            "type": "cppbuild",
            // 任务名称，与launch.json的preLaunchTask相对应
            "label": "g++",
            // 要使用的编译器
            "command": "D:\\TDM-GCC-64\\bin\\g++.exe",
            "args": [
                // 生成和调试有关的信息
                "-g",
                "${file}",
                // 指定输出文件名，不加该参数则默认输出a.exe，Linux下默认a.out
                "-o",
                // "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\main.exe",
                "-std=c++11" // 采用的C++标准
            ],  // 编译命令参数
            "options": {
                "cwd": "D:\\TDM-GCC-64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true  // 设为false可做到一个tasks.json配置多个编译指令
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}